<table class="table table-hover align-middle mb-0">
    <thead class="table-light">
        <tr>
            <th>Date</th>
            <th>Source</th>
            <th>Order No</th>
            <th>Book Details</th>
            <th>Files / Actions</th>
            <th class="text-center">3-Knife Trim</th>
            <th class="text-center">Dispatch</th>
        </tr>
    </thead>
    <tbody>
        <% if (workshops.length===0) { %>
            <tr>
                <td colspan="7" class="text-center py-4">No workshop tasks found.</td>
            </tr>
            <% } else { %>
                <% workshops.forEach(ws=> {
                    const isCp = ws.OrderSource && ws.OrderSource.name === 'Cloud Print';
                    const orderId = isCp && ws.CpOrderItem && ws.CpOrderItem.CpOrder ?
                    ws.CpOrderItem.CpOrder.cpOrderId :
                    (ws.OrderItem && ws.OrderItem.Order ? ws.OrderItem.Order.id.split('-')[0].toUpperCase() : 'N/A');

                    const files = isCp && ws.CpOrderItem ? ws.CpOrderItem.CpFiles : [];
                    %>
                    <tr class="<%= ws.threeKnife && ws.dispatch ? 'table-success' : '' %>" id="row-<%= ws.id %>">
                        <td>
                            <%= new Date(ws.createdAt).toLocaleDateString() %>
                        </td>
                        <td>
                            <% if(isCp) { %>
                                <span class="badge bg-info text-dark">Cloud Print</span>
                                <% } else { %>
                                    <span class="badge bg-secondary">Website</span>
                                    <% } %>
                        </td>
                        <td><code><%= orderId %></code></td>
                        <td>
                            <strong>
                                <%= ws.bookTitle %>
                            </strong><br>
                            <small class="text-muted">ISBN: <%= ws.isbn %></small>
                        </td>
                        <td>
                            <% if(isCp && files && files.length> 0) { %>
                                <% files.forEach(file=> { %>
                                    <div class="mb-1">
                                        <small>
                                            <%= file.type %>:
                                        </small>
                                        <% if(file.localPath) { %>
                                            <span class="badge bg-success">Downloaded</span>
                                            <button class="btn btn-sm btn-link text-danger p-0 ms-1 delete-file-btn"
                                                data-id="<%= file.id %>">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                            <a href="/hotfolder/<%= file.type %>_<%= file.id %>.pdf" target="_blank"
                                                class="btn btn-sm btn-link p-0 ms-1 text-decoration-none">View</a>
                                            <% } else { %>
                                                <button
                                                    class="btn btn-sm btn-outline-primary py-0 px-1 download-file-btn"
                                                    data-id="<%= file.id %>">
                                                    <i class="bi bi-download"></i> Hotfolder
                                                </button>
                                                <% } %>
                                    </div>
                                    <% }) %>
                                        <% } else if (isCp) { %>
                                            <span class="text-muted small">No Files</span>
                                            <% } else { %>
                                                <span class="text-muted small">-</span>
                                                <% } %>
                                                    <% if(isCp) { %>
                                                        <div class="mt-1">
                                                            <button
                                                                class="btn btn-sm btn-outline-info py-0 px-1 view-cp-details"
                                                                data-id="<%= ws.CpOrderItem && ws.CpOrderItem.CpOrder ? ws.CpOrderItem.CpOrder.id : '' %>">
                                                                <i class="bi bi-info-circle"></i> Details
                                                            </button>
                                                        </div>
                                                        <% } %>
                        </td>
                        <td class="text-center">
                            <div class="form-check d-inline-block">
                                <input type="checkbox" class="form-check-input ws-toggle" data-id="<%= ws.id %>"
                                    data-field="threeKnife" <%=ws.threeKnife ? 'checked' : '' %>>
                            </div>
                            <div class="small text-muted" id="date-threeKnife-<%= ws.id %>">
                                <%= ws.threeKnifeDate ? new Date(ws.threeKnifeDate).toLocaleDateString() : '-' %>
                            </div>
                        </td>
                        <td class="text-center">
                            <div class="form-check d-inline-block">
                                <input type="checkbox" class="form-check-input ws-toggle" data-id="<%= ws.id %>"
                                    data-field="dispatch" <%=ws.dispatch ? 'checked' : '' %>>
                            </div>
                            <div class="small text-muted" id="date-dispatch-<%= ws.id %>">
                                <%= ws.dispatchDate ? new Date(ws.dispatchDate).toLocaleDateString() : '-' %>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
                        <% } %>
    </tbody>
</table>

<!-- Pagination (AJAX Aware) -->
<% if (totalPages> 1) { %>
    <div class="admin-panel-dark p-2 rounded mt-3">
        <nav>
            <ul class="pagination justify-content-center mb-0">
                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                    <a class="page-link ajax-link" href="#" data-page="<%= currentPage - 1 %>">Previous</a>
                </li>
                <% for(let i=1; i <=totalPages; i++) { %>
                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                        <a class="page-link ajax-link" href="#" data-page="<%= i %>">
                            <%= i %>
                        </a>
                    </li>
                    <% } %>
                        <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                            <a class="page-link ajax-link" href="#" data-page="<%= currentPage + 1 %>">Next</a>
                        </li>
            </ul>
        </nav>
    </div>
    <% } %>