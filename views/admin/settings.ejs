<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>App Settings</h2>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card admin-panel-dark">
                <div class="card-header">
                    General Configuration
                </div>
                <div class="card-body">
                    <% if (typeof success !=='undefined' && success) { %>
                        <div class="alert alert-success">Settings updated successfully!</div>
                        <% } %>
                            <% if (typeof error !=='undefined' && error) { %>
                                <div class="alert alert-danger">Error: <%= error %>
                                </div>
                                <% } %>

                                    <form action="/admin/settings" method="POST">
                                        <div class="mb-3">
                                            <label for="appName" class="form-label">Application Name</label>
                                            <input type="text" class="form-control" id="appName" name="appName"
                                                value="<%= settings ? settings.appName : 'My Bookstore' %>" required>
                                            <div class="form-text">Displayed in the browser tab and navigation bar.
                                            </div>
                                        </div>

                                        <div class="mb-3">
                                            <label for="logoUrl" class="form-label">Logo URL</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="bi bi-image"></i></span>
                                                <input type="text" class="form-control" id="logoUrl" name="logoUrl"
                                                    value="<%= settings ? settings.logoUrl : '/images/logo_v2.svg' %>">
                                            </div>
                                            <div class="form-text">Path to the logo image (e.g., /images/logo.png or
                                                http://bucket...)</div>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">Theme Color Override (Optional)</label>
                                            <input type="color" class="form-control form-control-color"
                                                name="themeColor"
                                                value="<%= settings && settings.themeColor ? settings.themeColor : '#0d6efd' %>"
                                                title="Choose your color">
                                        </div>

                                        <hr>
                                        <div class="d-flex justify-content-end">
                                            <button type="submit" class="btn btn-primary">Save Changes</button>
                                        </div>
                                    </form>
                </div>
            </div>
        </div>
    </div>
</div>