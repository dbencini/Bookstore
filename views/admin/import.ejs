<script>
    const importForm = document.getElementById('importForm');
    const startImportBtn = document.getElementById('startImportBtn');
    const manualZipBtn = document.getElementById('manualZipBtn');
    const startRepairBtn = document.getElementById('startRepairBtn');
    const startUltimateBtn = document.getElementById('startUltimateBtn');
    const container = document.getElementById('progressContainer');
    const bar = document.getElementById('progressBar');
    const label = document.getElementById('progressLabel');
    const percent = document.getElementById('progressPercent');
    const summary = document.getElementById('progressSummary');
    const jobControls = document.getElementById('jobControls');
    const pauseJobBtn = document.getElementById('pauseJobBtn');
    const resumeJobBtn = document.getElementById('resumeJobBtn');
    const stopJobBtn = document.getElementById('stopJobBtn');

    let currentJobId = null;
    let statsModal, sampleModal, jsonPreviewModal; // Define globally

    function addLog(msg) {
        const console = document.getElementById('debugOutput');
        const time = new Date().toLocaleTimeString();
        if (console) {
            console.innerHTML += `<div><span class="text-info">[${time}]</span> ${msg}</div>`;
            console.scrollTop = console.scrollHeight;
        }
        window.console.log(`[JobDebug] ${msg}`);
    }

    // On Load: Check if there's any active job running
    document.addEventListener('DOMContentLoaded', async () => {
        // Initialize Modal here where bootstrap is guaranteed to be loaded
        statsModal = new bootstrap.Modal(document.getElementById('statsModal'));
        sampleModal = new bootstrap.Modal(document.getElementById('sampleModal'));
        jsonPreviewModal = new bootstrap.Modal(document.getElementById('jsonPreviewModal'));

        try {
            // Check Dump Status
            checkDumpStatus();
            // Check Master DB Stats
            updateMasterAuthorStats();

            addLog('Checking for active jobs...');
            const res = await fetch('/admin/api/jobs?limit=20', {
                headers: { 'Accept': 'application/json' }
            });

            if (!res.ok) {
                addLog('Error: Failed to fetch jobs. Server returned HTML or Error.');
                throw new Error('Non-JSON response');
            }

            const data = await res.json();
            addLog(`Found ${data.jobs?.length || 0} recent jobs.`);

            // Limit to jobs started in the last 24 hours to avoid ancient "ghost" jobs
            const oneDayAgo = new Date(Date.now() - 24 * 60 * 60 * 1000);

            // Sort by startTime descending, fallback to createdAt
            const activeJob = data.jobs
                .filter(j => (j.status === 'running' || j.status === 'paused') && j.type === 'author_repair_stable')
                .filter(j => {
                    const jobTime = new Date(j.startTime || j.createdAt);
                    return jobTime > oneDayAgo;
                })
                .sort((a, b) => {
                    const timeA = new Date(a.startTime || a.createdAt);
                    const timeB = new Date(b.startTime || b.createdAt);
                    return timeB - timeA;
                })[0];

            if (activeJob) {
                container.classList.remove('d-none');
                jobControls.classList.remove('d-none');
                label.innerText = activeJob.status === 'paused' ? 'Job Paused' : 'Job in progress...';
                pollProgress(activeJob.id);
            }
        } catch (err) {
            console.error('Failed to check for active jobs:', err);
        }
    });

    async function checkDumpStatus() {
        try {
            const res = await fetch('/admin/repair/dump-status', {
                headers: { 'Accept': 'application/json' }
            });
            const data = await res.json();
            const statusEl = document.getElementById('dumpFileStatus');
            const divEl = document.getElementById('ultimateStatus');

            divEl.classList.remove('d-none');
            if (data.exists) {
                statusEl.innerText = `Present (${data.sizeLabel})`;
                statusEl.className = 'fw-bold text-success';
            } else {
                statusEl.innerText = 'Not Found (Will Download)';
                statusEl.className = 'fw-bold text-warning';
            }
        } catch (e) { }
    }

    async function updateMasterAuthorStats() {
        try {
            const res = await fetch('/admin/api/master-author-stats', {
                headers: { 'Accept': 'application/json' }
            });
            const data = await res.json();
            if (data.success) {
                document.getElementById('masterAuthorCount').innerText = data.authorCount.toLocaleString();
                document.getElementById('masterMappingCount').innerText = data.mappingCount.toLocaleString();
            }
        } catch (e) {
            console.error('Failed to update master author stats:', e);
        }
    }

    async function handleImport(url, body, isFormData = true) {
        startImportBtn.disabled = true;
        manualZipBtn.disabled = true;
        if (startRepairBtn) startRepairBtn.disabled = true;

        container.classList.remove('d-none');
        bar.style.width = '0%';
        bar.className = 'progress-bar progress-bar-striped progress-bar-animated';
        label.innerText = 'Initializing...';
        summary.innerText = '';

        try {
            const options = { method: 'POST', body };
            options.headers = options.headers || {};
            options.headers['Accept'] = 'application/json';
            if (!isFormData) options.headers['Content-Type'] = 'application/json';

            const response = await fetch(url, options);
            const result = await response.json();

            if (result.success && result.jobId) {
                pollProgress(result.jobId);
            } else if (result.jobId) {
                // If job exists but is paused/running, we still poll it
                pollProgress(result.jobId);
            } else {
                alert('Error starting job: ' + (result.error || 'Unknown error'));
                resetButtons();
            }
        } catch (err) {
            console.error(err);
            alert('Failed to start job.');
            resetButtons();
        }
    }

    function resetButtons() {
        startImportBtn.disabled = false;
        manualZipBtn.disabled = false;
        if (startRepairBtn) startRepairBtn.disabled = false;
        if (startUltimateBtn) startUltimateBtn.disabled = false;
    }

    importForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        const csvFile = document.getElementById('csvFile').files[0];
        if (!csvFile) {
            alert('Please select a file to upload.');
            return;
        }
        handleImport('/admin/import/csv', new FormData(importForm));
    });

    manualZipBtn.addEventListener('click', () => {
        const markup = document.getElementById('markup').value;
        handleImport('/admin/import/manual-zip', JSON.stringify({ markup }), false);
    });

    if (startRepairBtn) {
        startRepairBtn.addEventListener('click', () => {
            handleImport('/admin/import/fix-thumbnails', null, false);
        });
    }

    if (startUltimateBtn) {
        startUltimateBtn.addEventListener('click', () => {
            if (!confirm('This will download a ~10GB file and scan it. It is very fast for matching but requires disk space. Continue?')) return;
            handleImport('/admin/import/ultimate-repair', null, false);
        });
    }

    const fastAuthorRepairBtn = document.getElementById('fastAuthorRepairBtn');
    if (fastAuthorRepairBtn) {
        fastAuthorRepairBtn.addEventListener('click', () => {
            if (!confirm('This will repair missing authors using LOCAL Open Library data (no API calls). Estimated time: a few hours. Continue?')) return;
            handleImport('/admin/import/fast-author-repair', null, false);
        });
    }

    const checkHiddenBooksBtn = document.getElementById('checkHiddenBooksBtn');
    if (checkHiddenBooksBtn) {
        checkHiddenBooksBtn.addEventListener('click', async () => {
            if (!confirm('This will check all hidden books (isVisible=false) and make them visible if they qualify. Continue?')) return;

            checkHiddenBooksBtn.disabled = true;
            checkHiddenBooksBtn.innerHTML = '<i class="bi bi-hourglass-split"></i> Checking...';

            try {
                const res = await fetch('/admin/import/check-hidden-books', {
                    method: 'POST',
                    headers: { 'Accept': 'application/json' }
                });
                const data = await res.json();

                if (data.success) {
                    alert(`Success! Made ${data.updated} books visible.\nFixed prices: ${data.pricesFixed}\nTotal checked: ${data.checked}`);
                    window.location.reload();
                } else {
                    alert('Error: ' + (data.error || 'Unknown error'));
                }
            } catch (err) {
                alert('Error: ' + err.message);
            } finally {
                checkHiddenBooksBtn.disabled = false;
                checkHiddenBooksBtn.innerHTML = '<i class="bi bi-eye-fill me-2"></i> Check IsVisible False Records';
            }
        });
    }

    const syncMasterAuthorsBtn = document.getElementById('syncMasterAuthorsBtn');
    if (syncMasterAuthorsBtn) {
        syncMasterAuthorsBtn.addEventListener('click', () => {
            if (!confirm('This will synchronize the permanent author database from your local OpenLibraryAuthors.txt file. This process is incremental. Continue?')) return;
            handleImport('/admin/import/fast-author-repair', null, false);
        });
    }

    pauseJobBtn.addEventListener('click', async () => {

        if (!currentJobId) return;
        try {
            const res = await fetch(`/admin/jobs/${currentJobId}/pause`, {
                method: 'POST',
                headers: { 'Accept': 'application/json' }
            });
            const data = await res.json();
            if (!data.success) alert(data.error || 'Failed to pause job.');
        } catch (err) {
            console.error(err);
        }
    });

    resumeJobBtn.addEventListener('click', async () => {
        if (!currentJobId) return;
        try {
            const res = await fetch(`/admin/jobs/${currentJobId}/resume`, {
                method: 'POST',
                headers: { 'Accept': 'application/json' }
            });
            const data = await res.json();
            if (!data.success) alert(data.error || 'Failed to resume job.');
        } catch (err) {
            console.error(err);
        }
    });

    stopJobBtn.addEventListener('click', async () => {
        if (!currentJobId) return;
        if (!confirm('Are you sure you want to stop this job? It can be resumed later if the type supports it.')) return;
        try {
            const res = await fetch(`/admin/jobs/${currentJobId}/stop`, {
                method: 'POST',
                headers: { 'Accept': 'application/json' }
            });
            const data = await res.json();
            if (!data.success) alert(data.error || 'Failed to stop job.');
        } catch (err) {
            console.error(err);
        }
    });

    async function pollProgress(jobId) {
        currentJobId = jobId;
        // Disable buttons if polling starts (e.g. from on-load)
        startImportBtn.disabled = true;
        manualZipBtn.disabled = true;
        if (startRepairBtn) startRepairBtn.disabled = true;
        if (startUltimateBtn) startUltimateBtn.disabled = true;
        jobControls.classList.remove('d-none');

        const interval = setInterval(async () => {
            try {
                const res = await fetch(`/admin/api/jobs/${jobId}/status`, {
                    headers: { 'Accept': 'application/json' }
                });

                if (!res.ok) {
                    addLog(`Error: HTTP ${res.status} while polling status.`);
                    return;
                }

                const data = await res.json();
                addLog(`Poll: ${data.status} | Progress: ${data.progress}% | Summary: ${data.summary?.substring(0, 50)}...`);

                const p = data.progress || 0;
                bar.style.width = p + '%';
                percent.innerText = p + '%';

                // Special formatting for Ultimate Repair
                if (data.type === 'ultimate_repair' && data.summary.includes('Scanned')) {
                    // Extract stats if available in summary string
                    summary.innerHTML = `<div class="p-2 border rounded bg-white mt-1 shadow-sm">
                        <div class="d-flex justify-content-between mb-1">
                            <span class="text-secondary"><i class="bi bi-search me-1"></i> Records Scanned:</span>
                            <span class="fw-bold">${data.summary.match(/Scanned ([\d,]+)/)?.[1] || '...'}</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-success"><i class="bi bi-patch-check me-1"></i> Local Matches:</span>
            <span class="fw-bold">${data.fixedCount?.toLocaleString() || '0'}</span>
                        </div>
                    </div>`;
                } else if (data.type === 'author_repair_stable') {
                    const s = data.summary || '';
                    console.log('[Dashboard Debug] Received Summary:', s);

                    // Simple splitting by commas
                    const segments = s.split(/[,|]/);

                    const extractDigits = (label) => {
                        const seg = segments.find(seg => seg.toLowerCase().includes(label.toLowerCase()));
                        if (!seg) return null;
                        // Grab only the digits from this segment
                        const digits = seg.match(/(\d[\d\s\u00A0,]*)/);
                        return digits ? digits[1].replace(/[\u00A0\s,]/g, '').trim() : null;
                    };

                    const scanned = extractDigits('scanned');
                    const fixed = extractDigits('fixed') || extractDigits('updated');
                    const total = extractDigits('total');
                    const etaMatch = s.match(/(?:ETA|Remaining):?\s*(.*)/i) || s.match(/â€¢ ETA: (.*)/i);

                    if (scanned || fixed) {
                        const scannedText = parseInt(scanned || 0).toLocaleString() + (total ? ' / ' + parseInt(total).toLocaleString() : '');
                        const fixedText = parseInt(fixed || 0).toLocaleString();
                        const etaText = etaMatch ? (etaMatch[1] || '').trim() : '';

                        summary.innerHTML = `
                        <div class="p-3 border rounded bg-white mt-1 shadow-sm">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-secondary"><i class="bi bi-search me-1"></i> Progress:</span>
                                <span class="fs-4 fw-bold text-primary">${scannedText}</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-success"><i class="bi bi-person-check me-1"></i> Authors Fixed:</span>
                                <span class="fs-4 fw-bold text-success">${fixedText}</span>
                            </div>
                            ${etaText ? `
                            <div class="d-flex justify-content-between align-items-center small text-muted border-top pt-2 mt-2">
                                <span><i class="bi bi-clock me-1"></i> Time Remaining:</span>
                                <span class="fw-bold">${etaText}</span>
                            </div>` : ''}
                            <div class="mt-2 pt-2 border-top x-small" style="font-size: 0.65rem; color: #adb5bd;">
                                <strong class="text-info">Raw:</strong> ${s}
                            </div>
                        </div>`;
                    } else {
                        summary.innerText = s;
                    }
                } else {
                    summary.innerText = data.summary || '';
                }

                if (data.status === 'running') {
                    label.innerText = 'Processing...';
                    bar.classList.add('progress-bar-animated');
                    pauseJobBtn.classList.remove('d-none');
                    resumeJobBtn.classList.add('d-none');
                } else if (data.status === 'paused') {
                    label.innerText = 'Paused';
                    bar.classList.remove('progress-bar-animated');
                    pauseJobBtn.classList.add('d-none');
                    resumeJobBtn.classList.remove('d-none');
                }

                if (data.status === 'completed') {
                    clearInterval(interval);
                    label.innerText = 'Job Complete!';
                    bar.classList.remove('progress-bar-animated');
                    bar.classList.add('bg-success');
                    jobControls.classList.add('d-none');
                    document.getElementById('elapsedTime').style.display = 'none'; // Hide timer
                    startImportBtn.disabled = false;
                    manualZipBtn.disabled = false;
                    if (startRepairBtn) startRepairBtn.disabled = false;
                    if (startUltimateBtn) startUltimateBtn.disabled = false;
                    setTimeout(() => {
                        window.location.href = '/admin/import?success=JobFinished&type=' + (data.type || 'unknown');
                    }, 1500);
                } else if (data.status === 'stalled') {
                    clearInterval(interval);
                    label.innerHTML = '<span class="text-warning"><i class="bi bi-exclamation-triangle-fill me-1"></i> Job Stalled</span>';
                    summary.innerHTML = `
                        <div class="alert alert-warning mt-2 small mb-0">
                            <strong>Potential Crash Detected:</strong> This job hasn't updated its progress in over 5 minutes. 
                            The background process may have been killed. You can try stopping and restarting the job.
                        </div>
                    `;
                    bar.classList.remove('progress-bar-animated');
                    bar.classList.add('bg-warning');
                    jobControls.classList.remove('d-none'); // Keep controls so they can Stop it
                    resetButtons();
                } else if (data.status === 'failed' || data.status === 'stopped' || data.status === 'cancelled') {
                    clearInterval(interval);
                    label.innerText = data.status === 'failed' ? 'Job Failed' : 'Job Stopped';
                    bar.classList.remove('progress-bar-animated');
                    bar.classList.add('bg-danger');
                    jobControls.classList.add('d-none');
                    document.getElementById('elapsedTime').style.display = 'none'; // Hide timer
                    startImportBtn.disabled = false;
                    manualZipBtn.disabled = false;
                    if (startRepairBtn) startRepairBtn.disabled = false;
                    if (startUltimateBtn) startUltimateBtn.disabled = false;
                    if (data.status === 'failed') {
                        alert('Job failed (possibly server timeout). You can try again. Details: ' + data.summary);
                    }
                    resetButtons();
                }

                // Update elapsed time if job is running/paused
                if (data.startTime && (data.status === 'running' || data.status === 'paused')) {
                    const startTime = new Date(data.startTime);
                    const now = new Date();
                    const elapsedMs = now - startTime;
                    const minutes = Math.floor(elapsedMs / 60000);
                    const seconds = Math.floor((elapsedMs % 60000) / 1000);
                    const timeStr = `${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
                    document.getElementById('elapsedTimer').textContent = timeStr;
                    document.getElementById('elapsedTime').style.display = 'inline-block';
                }
            } catch (err) {
                console.error('Polling error:', err);
            }
        }, 4000); // Poll every 4 seconds as requested
