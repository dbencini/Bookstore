<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Import & Maintenance</h1>
        <a href="/admin" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to Dashboard
        </a>
    </div>

    <% if (success) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            <% if (success==='CSVImported' ) { %>
                Import successful! Added <%= added %> books.
                    <% } else if (success==='AllBooksDeleted' ) { %>
                        All books have been successfully deleted.
                        <% } else if (success==='FixJobStarted' ) { %>
                            Thumbnail fix job has been started. Check background jobs for progress.
                            <% } else { %>
                                Operation successful.
                                <% } %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"
                                        aria-label="Close"></button>
        </div>
        <% } %>

            <% if (error) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    Error: <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% } %>

                    <!-- Global Progress Section -->
                    <div id="progressContainer" class="card shadow-sm border-0 mb-4 d-none">
                        <div class="card-body bg-light">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="mb-0 fw-bold" id="progressLabel">Background Job</h6>
                                <span class="badge bg-primary px-3 py-2" id="progressPercent">0%</span>
                            </div>
                            <div class="progress mb-3" style="height: 15px;">
                                <div id="progressBar" class="progress-bar progress-bar-striped progress-bar-animated"
                                    role="progressbar" style="width: 0%"></div>
                            </div>
                            <div id="progressSummary" class="text-muted small mb-3"></div>

                            <div id="jobControls" class="d-flex gap-2 d-none">
                                <button type="button" id="pauseJobBtn" class="btn btn-warning btn-md px-4">
                                    <i class="bi bi-pause-fill me-1"></i> Pause Job
                                </button>
                                <button type="button" id="resumeJobBtn" class="btn btn-success btn-md px-4 d-none">
                                    <i class="bi bi-play-fill me-1"></i> Resume Job
                                </button>
                                <button type="button" id="stopJobBtn" class="btn btn-danger btn-md px-4">
                                    <i class="bi bi-stop-fill me-1"></i> Stop Job
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="row g-4">
                        <!-- Import from CSV/ZIP -->
                        <div class="col-md-6">
                            <div class="card h-100 shadow-sm border-0">
                                <div class="card-header bg-primary text-white py-3">
                                    <h5 class="card-title mb-0"><i class="bi bi-file-earmark-zip me-2"></i> Import Books
                                        (CSV or ZIP)</h5>
                                </div>
                                <div class="card-body py-4">
                                    <p class="text-muted small mb-4">
                                        Upload a CSV or ZIP file to bulk import books.
                                        <strong>Markup:</strong> Cost prices will be increased by the specified
                                        percentage.
                                    </p>
                                    <form id="importForm" enctype="multipart/form-data">
                                        <div class="mb-3">
                                            <label for="markup" class="form-label fw-bold">Markup Percentage (%)</label>
                                            <input type="number" class="form-control" id="markup" name="markup"
                                                value="0" min="0" step="0.1">
                                        </div>
                                        <div class="mb-4">
                                            <label for="csvFile" class="form-label fw-bold">Select CSV/ZIP File</label>
                                            <input class="form-control" type="file" id="csvFile" name="csvFile"
                                                accept=".csv,.zip">
                                        </div>


                                        <div class="d-grid gap-2">
                                            <button type="submit" id="startImportBtn" class="btn btn-primary">
                                                <i class="bi bi-upload me-2"></i> Start Upload Import
                                            </button>
                                            <div class="text-center my-1 small text-muted">-- OR --</div>
                                            <button type="button" id="manualZipBtn" class="btn btn-outline-primary">
                                                <i class="bi bi-folder-symlink me-2"></i> Import from library.zip
                                            </button>
                                            <div class="text-center mt-1"><small class="text-muted"
                                                    style="font-size: 0.65rem;">(Place library.zip in /uploads/
                                                    first)</small></div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <!-- Maintenance Actions -->
                        <div class="col-md-6">
                            <div class="card h-100 shadow-sm border-0">
                                <div class="card-header bg-dark text-white py-3">
                                    <h5 class="card-title mb-0"><i class="bi bi-shield-lock me-2"></i> Maintenance &
                                        Utility</h5>
                                </div>
                                <div class="card-body d-flex flex-column justify-content-center py-4">
                                    <div class="mb-4">
                                        <h6 class="fw-bold mb-2">Repair Missing Data</h6>
                                        <p class="text-muted small mb-3">
                                            Scans library for books with missing descriptions, authors, ISBNs, or
                                            placeholder images.
                                            Uses ISBN lookup where available for high accuracy.
                                        </p>
                                        <div class="d-grid gap-2">
                                            <button type="button" id="startUltimateBtn" class="btn btn-success fw-bold">
                                                <i class="bi bi-rocket-takeoff-fill me-2"></i> Ultimate Repair (Open
                                                Library Bulk) - PREFERRED
                                            </button>
                                            <button type="button" id="startRepairBtn" class="btn btn-outline-info">
                                                <i class="bi bi-tools me-2"></i> Standard Repair (Google API - Slower)
                                            </button>
                                            <button type="button" id="showStatsBtn" class="btn btn-outline-primary">
                                                <i class="bi bi-bar-chart-line me-2"></i> Book Stats & Health Report
                                            </button>
                                            <button type="button" id="sampleHugeFileBtn"
                                                class="btn btn-outline-warning">
                                                <i class="bi bi-file-earmark-text me-2"></i> Sample GoogleHugeFile.txt
                                            </button>
                                        </div>
                                        <div id="ultimateStatus" class="mt-3 p-3 bg-light rounded d-none">
                                            <div class="d-flex justify-content-between small mb-1">
                                                <span>Dump File:</span>
                                                <span id="dumpFileStatus" class="fw-bold text-muted">Checking...</span>
                                            </div>
                                            <div class="alert alert-warning p-2 mb-0 mt-2" style="font-size: 0.75rem;">
                                                <i class="bi bi-exclamation-triangle-fill me-1"></i>
                                                <strong>Disk Warning:</strong> Requires ~30GB for the uncompressed
                                                stream.
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <hr class="my-4">

                                <div>
                                    <h6 class="fw-bold mb-2 text-danger">Danger Zone</h6>
                                    <p class="text-muted small mb-3">
                                        Irreversibly removes <strong>all</strong> book records from the database.
                                        Use with extreme caution.
                                    </p>
                                    <form action="/admin/import/delete-all" method="POST"
                                        onsubmit="return confirm('Are you absolutely sure? This will delete EVERY book in the system.');">
                                        <button type="submit" class="btn btn-danger w-100">
                                            <i class="bi bi-trash3 me-2"></i> Delete All Books
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
</div>

<!-- GoogleHugeFile Sample Modal -->
