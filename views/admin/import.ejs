<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Import & Maintenance</h1>
        <a href="/admin" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to Dashboard
        </a>
    </div>

    <% if (success) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            <% if (success==='CSVImported' ) { %>
                Import successful! Added <%= added %> books.
                    <% } else if (success==='AllBooksDeleted' ) { %>
                        All books have been successfully deleted.
                        <% } else if (success==='FixJobStarted' ) { %>
                            Thumbnail fix job has been started. Check background jobs for progress.
                            <% } else { %>
                                Operation successful.
                                <% } %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"
                                        aria-label="Close"></button>
        </div>
        <% } %>

            <% if (error) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    Error: <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% } %>

                    <!-- Global Progress Section -->
                    <div id="progressContainer" class="card shadow-sm border-0 mb-4 d-none">
                        <div class="card-body bg-light">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div>
                                    <h6 class="mb-0 fw-bold d-inline" id="progressLabel">Background Job</h6>
                                </div>
                                <span class="badge bg-primary px-3 py-2" id="progressPercent">0%</span>
                            </div>
                            <div class="progress mb-3" style="height: 15px;">
                                <div id="progressBar" class="progress-bar progress-bar-striped progress-bar-animated"
                                    role="progressbar" style="width: 0%"></div>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div id="progressSummary" class="text-muted small"></div>
                                <div id="elapsedTime" class="badge bg-secondary px-2 py-1"
                                    style="font-family: monospace; display: none;">
                                    <i class="bi bi-stopwatch me-1"></i><span id="elapsedTimer">00:00</span>
                                </div>
                            </div>
                            <div id="jobControls" class="d-flex gap-2 mb-3 d-none">
                                <button type="button" id="pauseJobBtn" class="btn btn-warning btn-md px-4">
                                    <i class="bi bi-pause-fill me-1"></i> Pause Job
                                </button>
                                <button type="button" id="resumeJobBtn" class="btn btn-success btn-md px-4 d-none">
                                    <i class="bi bi-play-fill me-1"></i> Resume Job
                                </button>
                                <button type="button" id="stopJobBtn" class="btn btn-danger btn-md px-4">
                                    <i class="bi bi-stop-fill me-1"></i> Stop Job
                                </button>
                            </div>

                            <!-- Debug Terminal (Toggleable) -->
                            <div class="mt-4">
                                <button class="btn btn-sm btn-outline-dark opacity-50 mb-2" type="button"
                                    data-bs-toggle="collapse" data-bs-target="#debugConsole">
                                    <i class="bi bi-terminal me-1"></i> Show Debug Console
                                </button>
                                <div class="collapse" id="debugConsole">
                                    <div id="debugOutput" class="p-3 bg-dark text-white rounded small"
                                        style="font-family: 'Courier New', monospace; height: 150px; overflow-y: scroll; line-height: 1.2;">
                                        [System] Debug console initialized...
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
</div>

<div class="row g-4">
    <!-- Import from CSV/ZIP -->
    <div class="col-md-6">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-header bg-primary text-white py-3">
                <h5 class="card-title mb-0"><i class="bi bi-file-earmark-zip me-2"></i> Import Books
                    (CSV or ZIP)</h5>
            </div>
            <div class="card-body py-4">
                <p class="text-muted small mb-4">
                    Upload a CSV or ZIP file to bulk import books.
                    <strong>Markup:</strong> Cost prices will be increased by the specified
                    percentage.
                </p>
                <form id="importForm" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="markup" class="form-label fw-bold">Markup Percentage (%)</label>
                        <input type="number" class="form-control" id="markup" name="markup" value="0" min="0"
