<!-- Book Stats Modal -->
<div class="modal fade" id="statsModal" tabindex="-1" aria-labelledby="statsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="statsModalLabel"><i class="bi bi-bar-chart-line me-2"></i> Book
                    Library
                    Stats</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="statsContent">
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2 text-muted">Calculating statistics...</p>
                    </div>
                </div>
                <div id="examplesSection" class="mt-4 d-none">
                    <hr>
                    <h6 class="fw-bold mb-3" id="examplesTitle">Representative Examples</h6>
                    <div id="examplesList"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    const importForm = document.getElementById('importForm');
    const startImportBtn = document.getElementById('startImportBtn');
    const manualZipBtn = document.getElementById('manualZipBtn');
    const startRepairBtn = document.getElementById('startRepairBtn');
    const startUltimateBtn = document.getElementById('startUltimateBtn');
    const container = document.getElementById('progressContainer');
    const bar = document.getElementById('progressBar');
    const label = document.getElementById('progressLabel');
    const percent = document.getElementById('progressPercent');
    const summary = document.getElementById('progressSummary');
    const jobControls = document.getElementById('jobControls');
    const pauseJobBtn = document.getElementById('pauseJobBtn');
    const resumeJobBtn = document.getElementById('resumeJobBtn');
    const stopJobBtn = document.getElementById('stopJobBtn');

    let currentJobId = null;

    // On Load: Check if there's any active job running
    document.addEventListener('DOMContentLoaded', async () => {
        // Initialize Modal here where bootstrap is guaranteed to be loaded
        statsModal = new bootstrap.Modal(document.getElementById('statsModal'));
        sampleModal = new bootstrap.Modal(document.getElementById('sampleModal'));
        jsonPreviewModal = new bootstrap.Modal(document.getElementById('jsonPreviewModal'));

        try {
            // Check Dump Status
            checkDumpStatus();

            // Check for running OR paused jobs
            const res = await fetch('/admin/jobs?limit=5', {
                headers: { 'Accept': 'application/json' }
            });
            const data = await res.json();
            const activeJob = data.jobs.find(j => j.status === 'running' || j.status === 'paused');

            if (activeJob) {
                container.classList.remove('d-none');
                jobControls.classList.remove('d-none');
                label.innerText = activeJob.status === 'paused' ? 'Job Paused' : 'Job in progress...';
                pollProgress(activeJob.id);
            }
        } catch (err) {
            console.error('Failed to check for active jobs:', err);
        }
    });

    async function checkDumpStatus() {
        try {
            const res = await fetch('/admin/repair/dump-status', {
                headers: { 'Accept': 'application/json' }
            });
            const data = await res.json();
            const statusEl = document.getElementById('dumpFileStatus');
            const divEl = document.getElementById('ultimateStatus');

            divEl.classList.remove('d-none');
            if (data.exists) {
                statusEl.innerText = `Present (${data.sizeLabel})`;
                statusEl.className = 'fw-bold text-success';
            } else {
                statusEl.innerText = 'Not Found (Will Download)';
                statusEl.className = 'fw-bold text-warning';
            }
        } catch (e) { }
    }

    async function handleImport(url, body, isFormData = true) {
        startImportBtn.disabled = true;
        manualZipBtn.disabled = true;
        if (startRepairBtn) startRepairBtn.disabled = true;

        container.classList.remove('d-none');
        bar.style.width = '0%';
        bar.className = 'progress-bar progress-bar-striped progress-bar-animated';
        label.innerText = 'Initializing...';
        summary.innerText = '';

        try {
            const options = { method: 'POST', body };
            options.headers = options.headers || {};
            options.headers['Accept'] = 'application/json';
            if (!isFormData) options.headers['Content-Type'] = 'application/json';

            const response = await fetch(url, options);
            const result = await response.json();

            if (result.success && result.jobId) {
                pollProgress(result.jobId);
            } else if (result.jobId) {
                // If job exists but is paused/running, we still poll it
                pollProgress(result.jobId);
            } else {
                alert('Error starting job: ' + (result.error || 'Unknown error'));
                resetButtons();
            }
        } catch (err) {
            console.error(err);
            alert('Failed to start job.');
            resetButtons();
        }
    }

    function resetButtons() {
        startImportBtn.disabled = false;
        manualZipBtn.disabled = false;
        if (startRepairBtn) startRepairBtn.disabled = false;
        if (startUltimateBtn) startUltimateBtn.disabled = false;
    }

    importForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        const csvFile = document.getElementById('csvFile').files[0];
        if (!csvFile) {
            alert('Please select a file to upload.');
            return;
        }
        handleImport('/admin/import/csv', new FormData(importForm));
    });

    manualZipBtn.addEventListener('click', () => {
        const markup = document.getElementById('markup').value;
        handleImport('/admin/import/manual-zip', JSON.stringify({ markup }), false);
    });

    if (startRepairBtn) {
        startRepairBtn.addEventListener('click', () => {
            handleImport('/admin/import/fix-thumbnails', null, false);
        });
    }

    if (startUltimateBtn) {
        startUltimateBtn.addEventListener('click', () => {
            if (!confirm('This will download a ~10GB file and scan it. It is very fast for matching but requires disk space. Continue?')) return;
            handleImport('/admin/import/ultimate-repair', null, false);
        });
    }

    pauseJobBtn.addEventListener('click', async () => {
        if (!currentJobId) return;
        try {
            const res = await fetch(`/admin/jobs/${currentJobId}/pause`, {
                method: 'POST',
                headers: { 'Accept': 'application/json' }
            });
            const data = await res.json();
            if (!data.success) alert(data.error || 'Failed to pause job.');
        } catch (err) {
            console.error(err);
        }
    });

    resumeJobBtn.addEventListener('click', async () => {
        if (!currentJobId) return;
        try {
            const res = await fetch(`/admin/jobs/${currentJobId}/resume`, {
                method: 'POST',
                headers: { 'Accept': 'application/json' }
            });
            const data = await res.json();
            if (!data.success) alert(data.error || 'Failed to resume job.');
        } catch (err) {
            console.error(err);
        }
    });

    stopJobBtn.addEventListener('click', async () => {
        if (!currentJobId) return;
        if (!confirm('Are you sure you want to stop this job? It can be resumed later if the type supports it.')) return;
        try {
            const res = await fetch(`/admin/jobs/${currentJobId}/stop`, {
                method: 'POST',
                headers: { 'Accept': 'application/json' }
            });
            const data = await res.json();
            if (!data.success) alert(data.error || 'Failed to stop job.');
        } catch (err) {
            console.error(err);
        }
    });

    async function pollProgress(jobId) {
        currentJobId = jobId;
        // Disable buttons if polling starts (e.g. from on-load)
        startImportBtn.disabled = true;
        manualZipBtn.disabled = true;
        if (startRepairBtn) startRepairBtn.disabled = true;
        if (startUltimateBtn) startUltimateBtn.disabled = true;
        jobControls.classList.remove('d-none');

        const interval = setInterval(async () => {
            try {
                const res = await fetch(`/admin/jobs/${jobId}/status`, {
                    headers: { 'Accept': 'application/json' }
                });
                const data = await res.json();

                const p = data.progress || 0;
                bar.style.width = p + '%';
                percent.innerText = p + '%';

                // Special formatting for Ultimate Repair
                if (data.type === 'ultimate_repair' && data.summary.includes('Scanned')) {
                    // Extract stats if available in summary string
                    summary.innerHTML = `<div class="p-2 border rounded bg-white mt-1 shadow-sm">
                        <div class="d-flex justify-content-between mb-1">
                            <span class="text-secondary"><i class="bi bi-search me-1"></i> Records Scanned:</span>
                            <span class="fw-bold">${data.summary.match(/Scanned ([\d,]+)/)?.[1] || '...'}</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-success"><i class="bi bi-patch-check me-1"></i> Local Matches:</span>
                            <span class="fw-bold">${data.fixedCount?.toLocaleString() || '0'}</span>
                        </div>
                    </div>`;
                } else {
                    summary.innerText = data.summary || '';
                }

                if (data.status === 'running') {
                    label.innerText = 'Processing...';
                    bar.classList.add('progress-bar-animated');
                    pauseJobBtn.classList.remove('d-none');
                    resumeJobBtn.classList.add('d-none');
                } else if (data.status === 'paused') {
                    label.innerText = 'Paused';
                    bar.classList.remove('progress-bar-animated');
                    pauseJobBtn.classList.add('d-none');
                    resumeJobBtn.classList.remove('d-none');
                }

                if (data.status === 'completed') {
                    clearInterval(interval);
                    label.innerText = 'Job Complete!';
                    bar.classList.remove('progress-bar-animated');
                    bar.classList.add('bg-success');
                    jobControls.classList.add('d-none');
                    setTimeout(() => {
                        window.location.href = '/admin/import?success=JobFinished&type=' + (data.type || 'unknown');
                    }, 1500);
                } else if (data.status === 'failed') {
                    clearInterval(interval);
                    label.innerText = 'Job Failed';
                    bar.classList.add('bg-danger');
                    bar.classList.remove('progress-bar-animated');
                    // jobControls.classList.add('d-none');
                    alert('Job failed (possibly server timeout). You can try again. Details: ' + data.summary);
                    resetButtons();
                } else if (data.status === 'stopped' || data.status === 'cancelled') {
                    clearInterval(interval);
                    label.innerText = 'Job Stopped';
                    bar.classList.add('bg-warning');
                    bar.classList.remove('progress-bar-animated');
                    // jobControls.classList.add('d-none');
                    resetButtons();
                }
            } catch (err) {
                console.error('Polling error:', err);
            }
        }, 1000);
    }

    // Book Stats Logic - Moved into DOMContentLoaded but defined variables here
    let statsModal; // Will be initialized in DOMContentLoaded
    const statsContent = document.getElementById('statsContent');
    const showStatsBtn = document.getElementById('showStatsBtn');
    const examplesSection = document.getElementById('examplesSection');
    const examplesList = document.getElementById('examplesList');
    const examplesTitle = document.getElementById('examplesTitle');

    // GoogleHugeFile Sample Logic
    let sampleModal; // Will be initialized in DOMContentLoaded
    let jsonPreviewModal; // Will be initialized in DOMContentLoaded
    const sampleHugeFileBtn = document.getElementById('sampleHugeFileBtn');
    const sampleTableHeader = document.getElementById('sampleTableHeader');
    const sampleTableBody = document.getElementById('sampleTableBody');
    const sampleLoading = document.getElementById('sampleLoading');

    if (sampleHugeFileBtn) {
        sampleHugeFileBtn.addEventListener('click', async () => {
            sampleModal.show();
            sampleLoading.classList.remove('d-none');
            sampleTableHeader.innerHTML = '';
            sampleTableBody.innerHTML = '';

            try {
                const res = await fetch('/admin/repair/google-huge-file/sample', {
                    headers: { 'Accept': 'application/json' }
                });
                const data = await res.json();
                sampleLoading.classList.add('d-none');

                if (data.success && data.rows.length > 0) {
                    // Create headers based on column count
                    let headerHtml = '<tr>';
                    for (let i = 0; i < data.rows[0].length; i++) {
                        headerHtml += `<th>Col ${i + 1}</th>`;
                    }
                    headerHtml += '</tr>';
                    sampleTableHeader.innerHTML = headerHtml;

                    // Fill rows
                    let bodyHtml = '';
                    data.rows.forEach((row, rowIndex) => {
                        bodyHtml += '<tr>';
                        row.forEach((cell, colIndex) => {
                            if (colIndex === 4) { // Data Column
                                bodyHtml += `<td>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <code class="text-truncate d-inline-block" style="max-width: 300px;">${cell.substring(0, 50)}...</code>
                                        <button class="btn btn-sm btn-link py-0" onclick="inspectJson(${rowIndex})">
                                            <i class="bi bi-zoom-in"></i> Inspect
                                        </button>
                                    </div>
                                </td>`;
                            } else {
                                const displayValue = cell.length > 100 ? cell.substring(0, 97) + '...' : cell;
                                bodyHtml += `<td class="text-break">${displayValue}</td>`;
                            }
                        });
                        bodyHtml += '</tr>';
                    });
                    sampleTableBody.innerHTML = bodyHtml;
                    // Store rows for inspection
                    window.currentSampleRows = data.rows;
                } else {
                    sampleTableBody.innerHTML = `<tr><td colspan="100%" class="text-center py-4 text-muted">${data.error || 'No data found in file.'}</td></tr>`;
                }
            } catch (err) {
                sampleLoading.classList.add('d-none');
                sampleTableBody.innerHTML = `<tr><td colspan="100%" class="text-center py-4 text-danger">Failed to read file: ${err.message}</td></tr>`;
            }
        });
    }

    // Global function for the Inspect button
    window.inspectJson = function (rowIndex) {
        if (!window.currentSampleRows || !window.currentSampleRows[rowIndex]) return;
        const rawJson = window.currentSampleRows[rowIndex][4];
        const displayEl = document.getElementById('jsonPreviewContent');

        try {
            const obj = JSON.parse(rawJson);
            displayEl.innerText = JSON.stringify(obj, null, 4);
            displayEl.classList.remove('text-danger');
        } catch (e) {
            displayEl.innerText = rawJson; // Fallback to raw if not valid JSON
            displayEl.classList.add('text-danger');
        }

        jsonPreviewModal.show();
    };

    if (showStatsBtn) {
        showStatsBtn.addEventListener('click', async () => {
            if (statsModal) statsModal.show();
            statsContent.innerHTML = `<div class="text-center py-5"><div class="spinner-border text-primary"></div><p class="mt-2 text-muted">Calculating statistics...</p></div>`;
            examplesSection.classList.add('d-none');

            try {
                const res = await fetch('/admin/repair/stats', {
                    headers: { 'Accept': 'application/json' }
                });
                const data = await res.json();
                if (data.success) {
                    const s = data.stats;
                    const categories = data.categories || [];

                    // Build category HTML
                    let categoryHtml = '';
                    if (categories.length > 0) {
                        categoryHtml = `
                            <div class="mt-4">
                                <h6 class="fw-bold mb-3"><i class="bi bi-tags me-2"></i>Books by Category</h6>
                                <div class="border rounded bg-light p-3" style="max-height: 300px; overflow-y: auto;">
                                    <div class="list-group list-group-flush">
                                        ${categories.map(cat => `
