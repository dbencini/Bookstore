<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        body {
            padding-top: 20px;
        }

        .card {
            margin-bottom: 20px;
        }

        .theme-toggle {
            cursor: pointer;
            user-select: none;
        }

        /* Hide scrollbar for clean horizontal scrolling */
        .no-scrollbar::-webkit-scrollbar {
            display: none;
        }

        .no-scrollbar {
            -ms-overflow-style: none;
            /* IE and Edge */
            scrollbar-width: none;
            /* Firefox */
        }
    </style>
    <link rel="stylesheet" href="/theme.css">
</head>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4 text-center">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="<%= appLogo %>" alt="<%= appName %>" height="40" class="d-inline-block align-middle me-2">
                <%= appName %>
            </a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto align-items-center">
                    <% if (user) { %>
                        <li class="nav-item me-3">
                            <span class="nav-link fw-bold">Welcome, <%= user.name %></span>
                        </li>
                        <% } %>

                            <% if (user) { %>
                                <li class="nav-item me-3">
                                    <a class="nav-link position-relative" href="/cart">
                                        <i class="bi bi-basket3 fs-4"></i>
                                        <span
                                            class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
                                            id="cart-count">
                                            <%= locals.cartCount %>
                                                <span class="visually-hidden">items</span>
                                        </span>
                                    </a>
                                </li>

                                <li class="nav-item me-3">
                                    <a class="nav-link" href="/profile"><i class="bi bi-person-circle me-1"></i>
                                        Profile</a>
                                </li>

                                <% if (user.UserType && user.UserType.name==='Admin' ) { %>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/admin"><i class="bi bi-speedometer2 me-1"></i>
                                            Dashboard</a>
                                    </li>
                                    <% } %>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/auth/logout"><i
                                                    class="bi bi-box-arrow-right me-1"></i>
                                                Logout</a>
                                        </li>
                                        <% } else { %>
                                            <li class="nav-item">
                                                <a class="nav-link" href="/auth/login"><i
                                                        class="bi bi-box-arrow-in-right me-1"></i> Login</a>
                                            </li>
                                            <!-- Register link removed as per requirement -->
                                            <% } %>
                                                <li class="nav-item ms-3">
                                                    <span class="nav-link theme-toggle" id="theme-toggle"
                                                        title="Toggle Dark Mode">ðŸŒ“</span>
                                                </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Category Navigation -->
    <nav class="navbar navbar-dark bg-dark mb-4 p-0">
        <div class="container-fluid d-flex align-items-center justify-content-between flex-nowrap">
            <button class="btn btn-link text-white p-0 flex-shrink-0"
                onclick="document.getElementById('cat-scroll-container').scrollBy({left: -document.getElementById('cat-scroll-container').clientWidth, behavior: 'smooth'})">
                <i class="fas fa-chevron-left fa-lg"></i>
            </button>
            <div id="cat-scroll-container" class="overflow-auto no-scrollbar py-2 mx-5"
                style="white-space: nowrap; flex-grow: 1; min-width: 0;">
                <ul class="nav flex-nowrap">
                    <% if (locals.categories && locals.categories.length> 0) { %>
                        <% locals.categories.forEach(category=> { %>
                            <li class="nav-item">
                                <a class="nav-link text-white px-3 small"
                                    style="white-space: nowrap; font-size: 0.9rem;"
                                    href="/books?category=<%= encodeURIComponent(category.name) %>">
                                    <%= category.name %>
                                </a>
                            </li>
                            <% }) %>
                                <% } %>
                </ul>
            </div>
            <button class="btn btn-link text-white p-0 flex-shrink-0"
                onclick="document.getElementById('cat-scroll-container').scrollBy({left: document.getElementById('cat-scroll-container').clientWidth, behavior: 'smooth'})">
                <i class="fas fa-chevron-right fa-lg"></i>
            </button>
        </div>
    </nav>


    <!-- Ad Carousel -->
    <div id="adCarousel" class="carousel slide mb-4" data-bs-ride="carousel" data-bs-interval="3000">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#adCarousel" data-bs-slide-to="0" class="active" aria-current="true"
                aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#adCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#adCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/images/banner1.png" class="d-block w-100" alt="Cozy Library"
                    style="height: 300px; object-fit: cover;">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Welcome to My Bookstore</h5>
                    <p>Find your next favorite story.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/banner2.png" class="d-block w-100" alt="New Arrivals"
                    style="height: 300px; object-fit: cover;">
                <div class="carousel-caption d-none d-md-block">
                    <h5>New Arrivals</h5>
                    <p>Check out the latest bestsellers.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/banner3.png" class="d-block w-100" alt="Summer Sale"
                    style="height: 300px; object-fit: cover;">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Summer Sale</h5>
                    <p>Get up to 50% off on selected titles.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#adCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#adCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <div class="container">
        <%- body %>
    </div>

    <!-- Footer -->
    <footer class="text-center text-lg-start mt-5 pt-4 pb-4 border-top">
        <div class="container">
            <section class="mb-4 text-center">
                <% if (locals.footerSettings) { %>
                    <% if (locals.footerSettings.facebookUrl) { %>
                        <a class="btn btn-outline-secondary btn-floating m-1 rounded-circle"
                            href="<%= locals.footerSettings.facebookUrl %>" target="_blank" role="button">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <% } %>

                            <% if (locals.footerSettings.twitterUrl) { %>
                                <a class="btn btn-outline-secondary btn-floating m-1 rounded-circle"
                                    href="<%= locals.footerSettings.twitterUrl %>" target="_blank" role="button">
                                    <i class="fab fa-twitter"></i>
                                </a>
                                <% } %>

                                    <% if (locals.footerSettings.instagramUrl) { %>
                                        <a class="btn btn-outline-secondary btn-floating m-1 rounded-circle"
                                            href="<%= locals.footerSettings.instagramUrl %>" target="_blank"
                                            role="button">
                                            <i class="fab fa-instagram"></i>
                                        </a>
                                        <% } %>

                                            <% if (locals.footerSettings.linkedinUrl) { %>
                                                <a class="btn btn-outline-secondary btn-floating m-1 rounded-circle"
                                                    href="<%= locals.footerSettings.linkedinUrl %>" target="_blank"
                                                    role="button">
                                                    <i class="fab fa-linkedin-in"></i>
                                                </a>
                                                <% } %>

                                                    <% if (locals.footerSettings.youtubeUrl) { %>
                                                        <a class="btn btn-outline-secondary btn-floating m-1 rounded-circle"
                                                            href="<%= locals.footerSettings.youtubeUrl %>"
                                                            target="_blank" role="button">
                                                            <i class="fab fa-youtube"></i>
                                                        </a>
                                                        <% } %>
                                                            <% } %>
            </section>
            <div class="text-center text-muted">
                Â© <%= new Date().getFullYear() %>
                    <%= locals.siteConfig ? locals.siteConfig.appName : 'Bookstore' %>. All rights reserved.
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const themeToggle = document.getElementById('theme-toggle');
        const currentTheme = localStorage.getItem('theme');

        if (currentTheme) {
            document.documentElement.setAttribute('data-theme', currentTheme);
        }

        themeToggle.addEventListener('click', () => {
            let theme = 'light';
            if (document.documentElement.getAttribute('data-theme') !== 'dark') {
                document.documentElement.setAttribute('data-theme', 'dark');
                theme = 'dark';
            } else {
                document.documentElement.setAttribute('data-theme', 'light');
            }
            localStorage.setItem('theme', theme);
        });
    </script>
</body>

</html>