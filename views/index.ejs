<div class="row mb-4">
    <div class="col-md-6 offset-md-3">
        <form action="/books" method="GET" class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Search by title, author, or ISBN" name="search"
                value="<%= locals.search || '' %>">
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
    </div>
</div>

<div class="row">
    <% if (books.length===0) { %>
        <div class="col-12 text-center">No books found.</div>
        <% } %>
            <% books.forEach(book=> { %>
                <div class="col-6 col-md-4 col-lg-3 mb-4">
                    <div class="card h-100 position-relative">
                        <img src="<%= book.imageUrl %>" class="card-img-top" alt="<%= book.title %>"
                            style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">
                                <a href="/books/<%= book.id %>" class="text-decoration-none text-dark stretched-link">
                                    <%= book.title %>
                                </a>
                            </h5>
                            <p class="card-text text-muted">
                                <%= book.author %>
                            </p>
                            <p class="card-text">
                                <%= book.description.substring(0, 100) %>...
                            </p>
                            <div class="mt-auto">
                                <span class="fs-5 fw-bold">R<%= book.price %></span>
                                <% if (book.isbn) { %>
                                    <p class="card-text text-muted small mb-0">ISBN: <%= book.isbn %>
                                    </p>
                                    <% } %>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
</div>

<!-- Pagination Controls -->
<% if (totalPages> 1) { %>
    <div class="admin-panel-dark p-2 rounded mt-4">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center mb-0">
                <!-- Previous Button -->
                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                    <a class="page-link"
                        href="/books?page=<%= currentPage - 1 %>&search=<%= encodeURIComponent(locals.search || '') %>&category=<%= encodeURIComponent(locals.category || '') %>"
                        tabindex="-1">Previous</a>
                </li>

                <!-- Page Numbers -->
                <% let startPage=Math.max(1, currentPage - 2); let endPage=Math.min(totalPages, currentPage + 2); if
                    (startPage> 1) { %>
                    <li class="page-item">
                        <a class="page-link"
                            href="/books?page=1&search=<%= encodeURIComponent(locals.search || '') %>&category=<%= encodeURIComponent(locals.category || '') %>">1</a>
                    </li>
                    <% if (startPage> 2) { %>
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                        <% } %>
                            <% } %>

                                <% for(let i=startPage; i <=endPage; i++) { %>
                                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                        <a class="page-link"
                                            href="/books?page=<%= i %>&search=<%= encodeURIComponent(locals.search || '') %>&category=<%= encodeURIComponent(locals.category || '') %>">
                                            <%= i %>
                                        </a>
                                    </li>
                                    <% } %>

                                        <% if (endPage < totalPages) { %>
                                            <% if (endPage < totalPages - 1) { %>
                                                <li class="page-item disabled"><span class="page-link">...</span></li>
                                                <% } %>
                                                    <li class="page-item">
                                                        <a class="page-link"
                                                            href="/books?page=<%= totalPages %>&search=<%= encodeURIComponent(locals.search || '') %>&category=<%= encodeURIComponent(locals.category || '') %>">
                                                            <%= totalPages %>
                                                        </a>
                                                    </li>
                                                    <% } %>

                                                        <!-- Next Button -->
                                                        <li
                                                            class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                                            <a class="page-link"
                                                                href="/books?page=<%= currentPage + 1 %>&search=<%= encodeURIComponent(locals.search || '') %>&category=<%= encodeURIComponent(locals.category || '') %>">Next</a>
                                                        </li>
            </ul>
        </nav>
    </div>
    <% } %>