<div class="row">
    <div class="col-md-4">
        <img src="<%= book.imageUrl %>" class="img-fluid rounded" alt="<%= book.title %>">
    </div>
    <div class="col-md-8">
        <h1>
            <%= book.title %>
        </h1>
        <h4 class="text-muted">
            <%= book.author %>
        </h4>
        <p class="lead">R<%= book.price %>
        </p>
        <p>
            <%= book.description %>
        </p>

        <hr>

        <% if (book.stock> 0) { %>
            <form action="/cart/add" method="POST" class="d-flex align-items-center">
                <input type="hidden" name="bookId" value="<%= book.id %>">
                <div class="me-3">
                    <label for="quantity" class="form-label visually-hidden">Quantity</label>
                    <input type="number" name="quantity" id="quantity" class="form-control" value="1" min="1"
                        max="<%= book.stock %>" style="width: 80px;">
                </div>
                <button type="submit" class="btn btn-success">Add to Cart</button>
            </form>
            <% } else { %>
                <div class="alert alert-warning">Out of Stock</div>
                <% } %>

                    <div class="mt-3">
                        <a href="/books" class="btn btn-outline-secondary">Back to Store</a>
                    </div>
    </div>
</div>